<p id="notice"><%= notice %></p>

<h1><%= t('Categories') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('Category') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.category %></td>
        <td><%= link_to t('Show'), category %></td>
        <td><%= link_to t('Edit'), edit_category_path(category) %></td>
        <td><%= link_to t('Delete'), category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

