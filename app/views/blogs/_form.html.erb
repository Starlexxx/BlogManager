<div class="flex-row d-flex justify-content-center">
    <div class="col-md-8">
        <div class="card mt-5">
            <div class="card-body">
                <%= form_for @blog do |f| %>
                <div class="form-group">
                    <%= f.label :title%>
                    <%= f.text_field :title, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :content %>
                    <%= f.text_area :content, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.select :category_id, Category.all.map { |c| [c.category, c.id] }  %>
                </div>

                <%= f.submit class: 'btn btn-outline-primary' do %>
                <%= t("Update Blog") %>
                <% end %>
                <%= link_to t("Back"), blogs_path, class: 'btn btn-outine-secondary' %>
                <% end %>
            </div>
        </div>
    </div>
</div>