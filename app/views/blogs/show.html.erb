<div class="container-fluid mt-3">

    <h1><%= t('Category') %>: <%= @blog.category.category %></h1>


    <h3><%= @blog.title %></h3>


    <p><%= @blog.content %></p>

    <% if current_user and current_user.is_admin? %>
    <%= link_to t('Edit'), edit_blog_path(@blog.id), class: 'btn btn-outline-primary' %>
    <%= link_to t('Delete'), blog_path(@blog), method: :delete, class: 'btn btn-outline-danger' %>
    <% end %>
    <%= link_to t('Back'), blogs_path, class: 'btn btn-outine-secondary' %>

</div>